<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bowfletchers.chatberry">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.NewGroupChat"
            android:label="@string/title_activity_new_group_chat"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Activities.AvailableUsers"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.LoginAccount" />
        <activity
            android:name=".Activities.WelcomePage"
            android:label="@string/title_activity_welcome_page"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MessageViewer" />
        <activity android:name=".Activities.GroupMessageViewer" />
        <activity android:name=".Activities.MainActivity" />
        <activity android:name=".Activities.RegisterAccount" />
        <activity
            android:name=".Activities.UserProfile"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Activities.ChatHistoryList"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name=".Activities.FriendList"
            android:theme="@style/AppTheme.NoActionBar"></activity>

    </application>

</manifest>